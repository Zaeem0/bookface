extends layout

block content
    .row
        .col-md-3
        .col-md-6
            h2 Register
            form(method='POST' action='/users/createUser')
                #form-group
                    label(for='username') Username
                    input.form-control(type='text', placeholder='JoeBloggs' name='username' required)
                #form-group
                    label(for='email') Email
                    input.form-control(type='email', placeholder='JoeBloggs@gmail.com' name='email' required)
                #form-group
                    label(for='password') Password
                    input.form-control(type='password', name='password' required)
                #form-group
                    label(for='Cpassword') Confirm Password
                    input.form-control(type='password', name='Cpassword' required)
                input.btn.btn-primary(type='submit', value='Sign Up')
