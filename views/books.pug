extends layout

block content
    .row
        .col-md-3
        .col-md-6
            h2 List of books
            if user
                p Add a book to this list 
                    a(href='/books/addBook') +
            else
                p You must be logged in to add a book
            each book, i in books
                ul(id=book.title, class="list-group" )
                    li.list-group-item
                        a(href="/books/" + book._id)=book.title
                        
                        if currentuser && currentuser.isAdmin
                            form(method='POST' id="addFave" action='/books/'+'delete/' + book._id )
                                input.btn.btn-danger(type='submit', id=book._id, name=book.title value="Delete") 
                                
                                button(type="button" class="btn btn-edit")
                                    a(href="/books/edit/" + book._id) Edit
                    

            
    
    
