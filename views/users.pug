extends layout

block content
    .row
        .col-md-3
        .col-md-6
            h2 List of users
            each user, i in users
                ul(id=user.username, class="list-group" )
                    li.list-group-item
                        a(href="/users/" + user._id)=user.username
                        
                        if currentuser && currentuser.isAdmin
                            form(method='POST' id="addFave" action='/users/'+'delete/' + user._id )
                                input.btn.btn-danger(type='submit', id=user._id, name=user.username value="Delete") 
                                
                                button(type="button" class="btn btn-edit")
                                    a(href="/users/edit/" + user._id) Edit
                        
                        


            
    
